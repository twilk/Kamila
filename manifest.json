{
    "manifest_version": 3,
    "name": "KAMILA",
    "version": "1.2.0",
    "description": "Intelligent Assistant for DARWINA.PL",
    "permissions": [
        "storage",
        "tabs",
        "webRequest"
    ],
    "host_permissions": [
        "https://api.darwina.pl/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://*.darwina.pl/*"],
            "css": [
                "styles/theme.css",
                "styles/animations.css",
                "styles/style.css"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [{
        "resources": [
            "styles/*.css",
            "locales/*.json"
        ],
        "matches": ["https://*.darwina.pl/*"]
    }],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
